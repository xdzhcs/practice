<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="drawer_text_color">@android:color/darker_gray</item>
        <item name="toolbar_color">@color/colorPrimary</item>
        <item name="drawer_gb_color">@android:color/white</item>
        <item name="list_gb_color">@android:color/white</item>
        <item name="item_bg_color">@android:color/white</item>
        <item name="item_text_color">#979d9f</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SplashTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.NoActionBar.DayTheme" parent="AppTheme.NoActionBar">
        <item name="textColorCustomized">#525252</item>
        <item name="viewBackgroundCustomized">#f7f7f7</item>
        <item name="layoutBackgroundCustomized">#f7f7f7</item>
        <item name="toolbarBackgroundCustomized">@color/colorAccent</item>
        <item name="dividerColorCustomized">#dddddd</item>
        <item name="fabColorCustomized">@color/colorAccent</item>
        <item name="textColorWhiteCustomized">#f7f7f7</item>
        <item name="navigationBarColorCustomized">@color/colorPrimary</item>

        <item name="drawer_text_color">@android:color/darker_gray</item>
        <item name="toolbar_color">@color/colorPrimary</item>
        <item name="drawer_gb_color">@android:color/white</item>
        <item name="list_gb_color">@android:color/white</item>
        <item name="item_bg_color">@android:color/white</item>
        <item name="item_text_color">#979d9f</item>
    </style>

    <style name="AppTheme.NoActionBar.NightTheme" parent="AppTheme.NoActionBar">
        <item name="textColorCustomized">#979d9f</item>
        <item name="viewBackgroundCustomized">#37474f</item>
        <item name="layoutBackgroundCustomized">#212b30</item>
        <item name="toolbarBackgroundCustomized">#263238</item>
        <item name="dividerColorCustomized">#3f484d</item>
        <item name="fabColorCustomized">#546e7a</item>
        <item name="textColorWhiteCustomized">#979d9f</item>
        <item name="navigationBarColorCustomized">#212b30</item>

        <item name="drawer_text_color">#979d9f</item>
        <item name="toolbar_color">#3f484d</item>
        <item name="drawer_gb_color">#546e7a</item>
        <item name="list_gb_color">#212b30</item>
        <item name="item_bg_color">#546e7a</item>
        <item name="item_text_color">#979d9f</item>
    </style>

</resources>
